{
	"name": "node-joker-boilerplate",
	"version": "1.0.0",
	"description": "Node JS Boilerplate for building APIs with TypeScript, Vitest, Supertest and BiomeJS following best practices for code organization and testing.",
	"main": "src/app.ts",
	"author": "tjuandev",
	"license": "MIT",
	"dependencies": {
		"dotenv": "^16.6.1",
		"express": "^5.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/express": "^5.0.5",
		"@types/node": "^22.19.1",
		"@types/supertest": "^6.0.3",
		"@vitest/ui": "^3.2.4",
		"lefthook": "^1.13.6",
		"nodemon": "^3.1.11",
		"supertest": "^7.1.4",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"scripts": {
		"build": "tsc",
		"start": "node dist/server.js",
		"dev": "nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
		"lint": "biome check ./src",
		"format": "biome check --write ./src",
		"biome:ci": "biome ci ./src --no-errors-on-unmatched --files-ignore-unknown=true",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:w": "vitest --watch",
		"test:ui": "vitest --ui"
	},
	"imports": {
		"#src/*": "./src/*",
		"#testHelpers/*": "./src/testHelpers/*",
		"#config/*": "./src/config/*"
	},
	"type": "module",
	"packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
